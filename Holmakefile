INCLUDES = $(HOLDIR)/examples/formal-languages/regular

THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS = $(patsubst %.sml,%.uo,$(THYFILES))

all: $(TARGETS) mustbuild

mustbuild: splat
.PHONY: mustbuild all

EXTRA_CLEANS = splat.o splat 

# Not really sure why this is needed given the INCLUDES above
localregexpLib :
	cp $(HOLDIR)/examples/formal-languages/regular/regexpLib.ui .
	cp $(HOLDIR)/examples/formal-languages/regular/regexpLib.uo .

splat : splatLib.uo localregexpLib splat.sml 
	$(protect $(HOLDIR)/bin/buildheap) integer_wordLib stringSimps regexpLib splatLib AADL splat.sml -o $@ --exe main
